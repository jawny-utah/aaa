<body>
  <div class="container">
    <div class="page-header">
      <h1> Edit article</h1>
      <%= form_for @article, url: article_path(@article), method: :patch do |f| %>
      <p>
        Title of article:<br>
        <%= f.text_field :title %>
      </p>
      <p>
        Article description:<br>
        <%= f.text_field :description %>
      </p>
      <p>
        Select user for grant access:<br>
        <%= f.select(:user_ids, options_for_select(users_for_articles([@article.user_id]), selected: @article.user_ids), {:include_blank => ""}, { multiple: true}) %>
      </p>
      <br>
        <%= f.submit %>
      <% end %>
      <hr>
      <p>
        <%= link_to "Back", :back %>
      </p>
    </div>
  </div>
</body>
